<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Nutrician.DisplayCondition"
    Title = "Nutrician">
        <StackLayout>
            <StackLayout>
                <Button
                        Grid.Row="0" Grid.Column="0"
                        Text="Home" Padding="5"
                        Clicked = "HomeButton">
                </Button>
                <Button Text="Add to MyList"
                        TextTransform="None"
                        FontSize="20"
                        TextColor="white"
                        BackgroundColor="blue"
                        BorderWidth="1.5"
                        CornerRadius="50"
                        Clicked = "Button_Clicked">
                </Button>
            </StackLayout>
                <CollectionView x:Name="collectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Grid x:Name="ConditionPage">
                                    <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <BoxView
                                        HorizontalOptions="Center"/>
                                    <Label Text="{Binding Name}"
                                           HorizontalOptions="Center"
                                            Grid.RowSpan="2"
                                            Margin="20"
                                            TextTransform="None"
                                            FontSize="30"
                                            TextColor="Blue"/>
                                    <BoxView Grid.Row="1"/>
                                    <Label Text="{Binding Suggestions}"
                                            Grid.ColumnSpan="1"
                                            Grid.Row="2"
                                            Grid.RowSpan="2"
                                            TextTransform="None"
                                            Margin="20"
                                            FontSize="20"
                                            TextColor="Green"/>
                                </Grid>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
</ContentPage>

